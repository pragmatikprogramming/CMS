@{
    ViewBag.Title = "EditMenu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="header">
    <h1 class="page-title">Edit Menu</h1>
</div>

<div class="formcontainer">
    <div style="line-height: 30px;">&nbsp;</div>
    <div style="color: red">@Html.ValidationSummary()</div>
    <form action="/Menu/EditMenu" method="post" id="menuEdit">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="formlabel">Menu Name:</div>
        <div class="formfield"><input type="text" class="input-xlarge" name="MenuName" value="@Model.MenuName"></div>
        <div class="clear">&nbsp;</div>
        <div style="line-height: 30px;">&nbsp;</div>
        <button form="menuEdit" class="btn btn-primary"><i class="icon-save"></i> Save</button>
    </form>
</div>


